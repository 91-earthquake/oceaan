#pragma config(Hubs,  S1, MatrxRbtcs, none,     none,     none)
#pragma config(Sensor, S2,     GyroSensor,     sensorI2CHiTechnicGyro)
#pragma config(Motor,  motorA,          MotorDrive1,   tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorB,          MotorDrive2,   tmotorNXT, PIDControl, encoder)

//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

float currHeading;

int offset = 598;

task getHeading () {
	float delTime = 0;
	float prevHeading = 0;
	float curRate = 0;


}



	task main()
{
		//start meten van de hoek
		startTask(getHeading);

		wait1Msec(500);


		while(true)
 {


			int rate; //snelheid waarmee je draait

			currHeading = SensorValue[GyroSensor] - offset; //snelheid is wat de sensor leest min de afwijking



	//rij 3 seconden vooruit

			motor[MotorDrive1] = 50;
			motor[MotorDrive2] = 50;
			wait1Msec(3000);

		  motor[MotorDrive1] = 0;
		  motor[MotorDrive2] = 0;




		if(abs(currHeading)>== 0 && <90)
		{

		motor[MotorDrive1] = 0;
		motor[MotorDrive2] = 0;

		}


		else if (currHeading = 90) {

		motor[MotorDrive1] = 0;
		motor[MotorDrive2] = 0;




		}


		wait1Msec(10);

     	 }
 }
}
